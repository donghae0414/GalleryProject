<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6951ff</item>
        <item name="colorPrimaryDark">#6951ff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#FAFAFA</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/binggrae_bold</item>
    </style>

    <style name="TimeLineRecyclerView">
        <item name="android:fontFamily">@font/binggrae_bold</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="SurveyTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/surveyTitle_height</item>
        <item name="android:text">@string/survey_title</item>
        <item name="android:textSize">@dimen/survey_title_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SurveyOrder">
        <item name="android:layout_width">@dimen/surveyOrder_width</item>
        <item name="android:layout_height">@dimen/surveyOrder_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SurveyCheckButton">
        <item name="android:layout_width">@dimen/survey_checkButton_width</item>
        <item name="android:layout_height">@dimen/survey_checkButton_height</item>
        <item name="android:src">@drawable/survey_check_button</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/mainWhite</item>
    </style>

    <style name="TimeLine_speechBubble">
        <item name="android:background">@drawable/speech_bubble</item>
        <item name="android:paddingLeft">@dimen/timeLine_speechBubble_bigPadding</item>
        <item name="android:paddingRight">@dimen/timeLine_speechBubble_smallPadding</item>
        <item name="android:paddingTop">@dimen/timeLine_speechBubble_smallPadding</item>
        <item name="android:paddingBottom">@dimen/timeLine_speechBubble_smallPadding</item>
    </style>

</resources>
