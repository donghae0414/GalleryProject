<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainWhite"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/photo_backButton"
            android:layout_width="@dimen/backButton_width"
            android:layout_height="@dimen/backButton_height"
            android:background="@color/mainWhite"
            android:scaleType="fitXY"
            android:src="@drawable/calendar_left_icon" />
    </LinearLayout>

    <ImageView
        android:id="@+id/photo_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/backButton_height"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

</FrameLayout>